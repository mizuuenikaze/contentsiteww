section.page.home
  div(data-hook="error-container")

  //- jumbotron
  div.jumbotron
    div.container
      //- carousel
      div#myCarousel.carousel.slide(data-ride="carousel" data-interval="10000")
        ol.carousel-indicators
          li.active(data-target="#myCarousel" data-slide-to="0")
          li(data-target="#myCarousel" data-slide-to="1")
          li(data-target="#myCarousel" data-slide-to="2")
        div.carousel-inner
          div.carousel-item.active
            picture
              source(data-srcset="/images/muk_200w.jpg 200w, /images/muk_300w.jpg 300w" media="--small")
              source(data-srcset="/images/muk_300w.jpg 300w, /images/muk_600w.jpg 600w" media="--medium")
              source(data-srcset="/images/muk_600w.jpg 600w, /images/muk_900w.jpg 900w" media="--large")
              source(data-srcset="/images/muk_900w.jpg 900w")
              img.d-block.w-75.lazyload(data-src="holder.js/100px100p?theme=custom&text=%EF%80%B0&auto" data-sizes="auto")
            div.carousel-caption
              h3(data-hook="outl-a.a")
              a.btn.btn-info(href="schedule") See Availability
          div.carousel-item
            picture
              source(data-srcset="/images/sun_200w.jpg 200w, /images/sun_300w.jpg 300w" media="--small")
              source(data-srcset="/images/sun_300w.jpg 300w, /images/sun_600w.jpg 600w" media="--medium")
              source(data-srcset="/images/sun_600w.jpg 600w, /images/sun_900w.jpg 900w" media="--large")
              source(data-srcset="/images/sun_900w.jpg 900w")
              img.d-block.w-75.lazyload(data-src="holder.js/100px100p?theme=custom&text=%EF%80%B0&auto" data-sizes="auto")
            div.carousel-caption
              h3(data-hook="outl-a.b")
              a.btn.btn-info(href="schedule") See Availability
          div.carousel-item
            picture
              source(data-srcset="/images/moon_200w.jpg 200w, /images/moon_300w.jpg 300w" media="--small")
              source(data-srcset="/images/moon_300w.jpg 300w, /images/moon_600w.jpg 600w" media="--medium")
              source(data-srcset="/images/moon_600w.jpg 600w, /images/moon_900w.jpg 900w" media="--large")
              source(data-srcset="/images/moon_900w.jpg 900w")
              img.d-block.w-75.lazyload(data-src="holder.js/100px100p?theme=custom&text=%EF%80%B0&auto" data-sizes="auto")
            div.carousel-caption
              h3(data-hook="outl-a.c")
              a.btn.btn-info(href="schedule") See Availability

        a.left.carousel-control-prev(href="#myCarousel" role="button")
          span.fas.fa-chevron-left(aria-hidden="true")
          span.sr-only Previous
        a.right.carousel-control-next(href="#myCarousel" role="button")
          span.fas.fa-chevron-right(aria-hidden="true")
          span.sr-only Next
      p &nbsp;
      ul
        li(data-hook="outl-a.d.0")
        li(data-hook="outl-a.d.1")
        li(data-hook="outl-a.d.2")

  //- grid content
